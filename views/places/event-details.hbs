<div class="container d-flex justify-content-center align-items-center cardDetails">
    <div class="card text-center" style="max-width: 540px">
        <div class="row g-0 align-items-center">
            <div class="col-md-4">

                <img src={{imageUrl}} class="img-fluid rounded-start">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">Rating: {{rating}}</p>
                    <figure id="myMap"></figure>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="/js/placesMap.js"></script>
        <script
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbBJPvYIaR5ozIx_0-uWiGeO9cK4IxHww&callback=initMap">
            </script>
    </div>
</div>