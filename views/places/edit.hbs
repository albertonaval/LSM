<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-uppercase fw-bold font-monospace p-2 text-center">Edit {{place.name}}</h1>
            <hr>
            <form action="/places/{{place._id}}/edit" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{place.name}}">
                        </div>
                    </div>
                    <div class="col">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="number" class="form-control" id="rating" name="rating" value="{{place.rating}}"
                            min="0" max="5" placeholder="0-5">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description"
                        value="{{place.description}}">
                </div>

                <div class="row">
                    <label for="coordinates" class="form-label">Coordinates</label>
                    <div class="mb-3 col-md-6">
                        <input type="text" class="form-control" id="latitude" name="latitude" placeholder="Latitud"
                            value="{{place.location.coordinates.[0]}}">
                    </div>
                    <div class="mb-3 col-md-6">
                        <input type="text" class="form-control" id="longitude" name="longitude" placeholder="Longitud"
                            value="{{place.location.coordinates.[1]}}">
                    </div>
                </div>
                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-outline-dark btn-lg">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
